        <TextBox x:Name="autor"  HorizontalAlignment="Left" Height="21" Margin="304,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <ComboBox Name="priority" Margin="448,48,212,378" Width="100" Height="20" VerticalAlignment="Top">
            <TextBlock>пойти на</TextBlock>
            <TextBlock>пойти на</TextBlock>

        </ComboBox>
        <TextBox x:Name="comment"  HorizontalAlignment="Left" Height="97" Margin="43,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="332"/>
        <Button Content="Создать" HorizontalAlignment="Left" Margin="715,0,0,0" VerticalAlignment="Bottom" Width="75" Click="Button_Click"/>


    </Grid>

</Page>
